{
  "name": "4d-testing-extension",
  "displayName": "4D Testing Extension",
  "description": "VS Code 4D Testing Extension",
  "repository": {
    "type": "git",
    "url": "https://github.com/gamescoot/4d-testing-extension"
  },
  "publisher": "ScottHarris",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.85.0"
  },
  "activationEvents": [
    "workspaceContains:**/*.4dm"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "4d-testing-extension.runTests",
        "title": "4d-testing-extension: Run Tests"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.5.2",
    "glob": "^11.0.3",
    "mocha": "^11.7.3",
    "tslint": "^6.1.3",
    "typescript": "^5.4.0"
  }
}
