{
  "name": "test-provider-sample",
  "displayName": "Test Provider Sample",
  "description": "VS Code test provider sample for 4D tests",
  "repository": {"type": "git","url":"https://github.com/gamescoot/4d-testing-extension"},
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "activationEvents": [
    "workspaceContains:**/*.4dm"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "test-provider-sample.runTests",
        "title": "Test-Provider-Sample: Run Tests"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.11.30",
    "typescript": "^5.4.0",
    "tslint": "^6.1.3"
  }
}
